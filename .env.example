# Host
HOST_NAME=http://novu.local

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
NODE_ENV=production

# =============================================================================
# DOCKER IMAGES
# =============================================================================
NOVU_API_IMAGE=khoasoyoung/novu-api:1.1-production
NOVU_WORKER_IMAGE=khoasoyoung/novu-worker:1.1-production
NOVU_DASHBOARD_IMAGE=khoasoyoung/novu-dashboard:1.1-production
NOVU_WS_IMAGE=khoasoyoung/novu-ws:1.1-production

# =============================================================================
# PORTS CONFIGURATION
# =============================================================================
# MongoDB port
MONGO_PORT=27018

# Redis port 
REDIS_PORT=6380

# Novu API port
API_PORT=3000

# Novu Worker port
WORKER_PORT=3002

# Novu Dashboard port
DASHBOARD_PORT=4000

# Novu WebSocket port
WS_PORT=3003

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB settings
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=password123
MONGO_INITDB_DATABASE=novu-db

# MongoDB connection URL
MONGO_URL=mongodb://root:password123@mongodb:27017/novu-db?authSource=admin

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-must-be-long
NOVU_SECRET_KEY=your-novu-secret-key-change-this-in-production-must-be-long
STORE_ENCRYPTION_KEY=12345678901234567890123456789012

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# Storage service: LOCAL or S3
STORAGE_SERVICE=LOCAL

# S3 Configuration (if using S3)
S3_BUCKET_NAME=
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Base URLs for frontend and API

# Dashboard URLs
FRONT_BASE_URL=${HOST_NAME}:${DASHBOARD_PORT}
VITE_API_URL=${HOST_NAME}:${API_PORT}
REACT_APP_API_URL=${HOST_NAME}:${API_PORT}
VITE_WS_URL=ws://${HOST_NAME}:${WS_PORT}
REACT_APP_WS_URL=ws://${HOST_NAME}:${WS_PORT}

# =============================================================================
# WORKER CONFIGURATION
# =============================================================================
WORKER_DEFAULT_CONCURRENCY=10
WORKER_DEFAULT_MAX_ATTEMPTS=3

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info

# =============================================================================
# THIRD-PARTY SERVICES (OPTIONAL)
# =============================================================================
# New Relic (set to false for self-hosted)
NEW_RELIC_ENABLED=false

# Sentry (leave empty to disable)
SENTRY_DSN=
VITE_SENTRY_DSN=

# =============================================================================
# EMAIL PROVIDERS (OPTIONAL)
# =============================================================================
# SendGrid
SENDGRID_API_KEY=

# =============================================================================
# AUTHENTICATION (OPTIONAL)
# =============================================================================
# Clerk (for advanced authentication)
VITE_CLERK_PUBLISHABLE_KEY=

# =============================================================================
# ADVANCED CONFIGURATION (USUALLY NO NEED TO CHANGE)
# =============================================================================
# Redis DB index for WebSocket
REDIS_DB_INDEX=2

# Self-hosted flag
VITE_SELF_HOSTED=true
IS_SELF_HOSTED=true
IS_DOCKER_HOSTED=true
